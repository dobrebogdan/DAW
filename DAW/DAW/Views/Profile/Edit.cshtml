@model DAW.Models.Profile
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action="/profile/edit/@ViewBag.Profile.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Descriere</label>
    <br />
    <input type="text" name="Description" value="@ViewBag.Profile.Description"/>
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.DropDownList("updatedRole", new SelectList(ViewBag.AllRoles, "Value", "Text", (string) ViewBag.UserRole), null, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Actualizeaza profil</button>
</form>

