@{
    ViewBag.Title = ViewBag.Category.Name;
}

<h2>@ViewBag.Title</h2>
<br />

<a class="btn btn-primary" href="/Category/show/@ViewBag.Category.Id">Sort by name</a>
<a class="btn btn-primary" href="/Category/showbymessages/@ViewBag.Category.Id">Sort by number of messages</a>

<br />
<hr />
<br />


@foreach (var subject in ViewBag.Subjects)
{
    <h2>@subject.Title</h2>
    <p>@subject.Content</p>
    <button class="btn btn-success" href="/Subject/Show/@subject.Id">Afisare subiect</button>
    if (ViewBag.UserId != null)
    {
        if (ViewBag.UserId.Equals(subject.UserId) || ViewBag.IsUserPrivileged)
        {
            <button class="btn btn-success" href="/Subject/Edit/@subject.Id">Editare subiect</button>
            <form method="post" action="/subject/delete/@subject.Id">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-danger" type="submit">Stergere subiect</button>
            </form>
        }
    }
    <br />
    <hr />
    <br />
}

<br />
<a class="btn btn-info" href="/category/addsubject/@ViewBag.Category.Id"> Adauga subiect </a>
<br />

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Category/Show/@ViewBag.Category.Id/?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Category/Show/@ViewBag.Category.Id/?page=@i">@(i)</a></li>
            }
            <li>
                <a href="/Category/Show/@ViewBag.Category.Id/?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>