@model DAW.Models.Subject

@{
    ViewBag.Title = "Add subject to category";
}

<h2>Add Subject</h2>


@using (Html.BeginForm(actionName:"AddSubject", controllerName: "Category"))
{
    <input type="hidden" name="CategoryId" value="@ViewBag.CategoryId"/>
    <input type="hidden" name="UserId" value="@ViewBag.UserId" />
    <br />

    @Html.Label("Title", "Titlu subiect")
    <br />
    @Html.EditorFor(m => m.Title)
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Descriere subiect")
    <br />
    @Html.EditorFor(m => m.Content)
    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Adauga subiect</button>
}
