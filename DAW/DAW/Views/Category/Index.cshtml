@{
    ViewBag.Title = "Lista categorii";
}

<h2>@ViewBag.Title</h2>
<br />

<a class="btn btn-primary" href="/Category/index">Sort by name</a>
<a class="btn btn-primary" href="/Category/indexbysubjects">Sort by number of subjects</a>
<br />
<hr />
<br />


@foreach (var category in ViewBag.Categories)
{
//    @Html.Label("Name", "Nume Categorie")
    <h3> @category.Name </h3>
    <p>@category.Description</p>
    <a class="btn btn-success" href="/category/show/@category.Id">Afisare categorie</a>
    if (ViewBag.UserId != null)
    {
        if (ViewBag.IsUserAdmin)
        {
        <a class="btn btn-success" href="/category/edit/@category.Id">Editare categorie</a>
        <form method="post" action="/category/delete/@category.Id">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger" type="submit">Stergere categorie</button>
        </form>
        }
    }
    <br />
    <hr />
    <br />
}

<br />
@if (ViewBag.UserId != null)
{
    if (ViewBag.IsUserAdmin)
    {
    <a class="btn btn-info" href="/category/new"> Adauga categorie </a>
    <br />
    }
}

